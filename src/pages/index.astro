---
import Badge from "../components/Badge.astro";
import Bandera from "../components/icons/Bandera.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Github from "../components/icons/Github.astro";
import SocialPill from "../components/SocialPill.astro";
import Layout from "../layouts/Layout.astro";
import Mail from "../components/icons/Mail.astro";
---

<Layout
  title="Villatoro.dev | Portafolio de Carlos Villatoro FrontEnd developer"
>
  <main>
    <section class="w-full md:w-[840px] mx-auto py-44">
      <div class="flex items-center mb-5">
        <img
          class="rounded-full size-24 mr-5 border-4 border-green-200"
          src="../public/cvillatoro.webp"
          alt="Carlos Villatoro photo"
        />
        <a
          href="https://www.linkedin.com/in/carlos-roberto-villatoro-barrios-9293a0198/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </div>
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-6">
        Hey, soy Carlos Villatoro
      </h1>
      <h2 class="text-2xl text-wrap">
        <span class="opacity-80">Desarrollador web con más de</span>
        <span class="text-sky-300/90"
          >3 años de experiencia, de Guatemala
        </span><Bandera class="size-6 inline-block" />. <span class="opacity-80"
          >Me apasiona la programación y disfruto compartir conocimientos a
          través de la enseñanza.</span
        >
      </h2>
      <nav class="flex gap-x-4 mt-8">
        <SocialPill
          href="https://www.linkedin.com/in/carlos-roberto-villatoro-barrios-9293a0198/"
        >
          <Linkedin class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/crvb0797">
          <Github class="size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:cvillatoro@villatoro.dev">
          <Mail class="size-6" />
          cvillatoro@villatoro.dev
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>
